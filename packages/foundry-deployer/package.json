{
  "name": "@bun-eth/foundry-deployer",
  "version": "0.1.0",
  "description": "Foundry deployment utilities with contract hot reload support",
  "bin": {
    "foundry-deployer": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts src/cli.ts --format cjs,esm --dts --watch",
    "generate": "bun run src/cli.ts"
  },
  "dependencies": {
    "viem": "^2.7.8",
    "glob": "^10.3.10",
    "prettier": "^3.2.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "tsup": "^8.0.1",
    "typescript": "^5.6.2"
  },
  "keywords": ["foundry", "ethereum", "deployment", "hot-reload"],
  "license": "MIT"
}
