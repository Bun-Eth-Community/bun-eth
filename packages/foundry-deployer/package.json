{
  "name": "@bun-eth/foundry-deployer",
  "version": "0.2.0",
  "description": "Foundry deployment utilities with contract hot reload support",
  "bin": {
    "foundry-deployer": "./src/cli.ts"
  },
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "echo 'No build needed - Bun uses TypeScript directly'",
    "dev": "echo 'No dev build needed - import source files directly'",
    "generate": "bun run src/cli.ts"
  },
  "dependencies": {
    "viem": "^2.7.8",
    "glob": "^10.3.10",
    "prettier": "^3.2.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "tsup": "^8.0.1",
    "typescript": "^5.6.2"
  },
  "keywords": [
    "foundry",
    "ethereum",
    "deployment",
    "hot-reload"
  ],
  "license": "MIT"
}
