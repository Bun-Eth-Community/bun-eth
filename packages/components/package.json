{
  "name": "@bun-eth/components",
  "version": "0.1.0",
  "description": "Reusable Web3 UI components for Bun-Eth",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles.css": "./dist/styles.css"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --external react",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch --external react",
    "test": "bun test"
  },
  "dependencies": {
    "@bun-eth/hooks": "workspace:*",
    "@bun-eth/core": "workspace:*",
    "@bun-eth/burner-connector": "workspace:*",
    "wagmi": "^2.16.4",
    "viem": "^2.7.8",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.0"
  },
  "peerDependencies": {
    "react": "^18.2.0 || ^19.0.0",
    "react-dom": "^18.2.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "tsup": "^8.0.1",
    "typescript": "^5.6.2"
  },
  "keywords": ["ethereum", "components", "web3", "react", "ui"],
  "license": "MIT"
}
