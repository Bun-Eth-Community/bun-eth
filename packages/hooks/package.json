{
  "name": "@bun-eth/hooks",
  "version": "0.1.0",
  "description": "Custom React hooks for Web3 interactions with Bun-Eth",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm",
    "dev": "tsup src/index.ts --format cjs,esm --watch",
    "test": "bun test"
  },
  "dependencies": {
    "@bun-eth/core": "workspace:*",
    "wagmi": "^2.16.4",
    "viem": "^2.7.8",
    "@tanstack/react-query": "^5.17.19"
  },
  "peerDependencies": {
    "react": "^18.2.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.48",
    "tsup": "^8.0.1",
    "typescript": "^5.6.2"
  },
  "keywords": ["ethereum", "hooks", "web3", "wagmi", "viem", "react"],
  "license": "MIT"
}
