# API Configuration
PORT=3001
NODE_ENV=development

# Port Configuration
# Consecutive ports for easy management - change all together if needed
# Run 'task dev:auto-ports' to automatically find free ports
WEB_PORT=3000
API_PORT=3001
ANVIL_PORT=3002

# Private Key Configuration
# For local development: Use Anvil's default private key (safe to commit)
# For testnet/mainnet: Replace with your own private key (⚠️ NEVER commit!)
PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# Foundry Configuration
# Suppresses nightly build warnings for all forge commands
FOUNDRY_DISABLE_NIGHTLY_WARNING=true

# Ethereum Node (Anvil)
ANVIL_NODE=http://localhost:${ANVIL_PORT:-3002}

# Network Configuration
CHAIN_ID=31337

# Docker Compose
COMPOSE_BAKE=true

# Frontend
# Get your WalletConnect Project ID from: https://cloud.reown.com/
# Leave empty to use only injected wallet (MetaMask, etc.)
NEXT_PUBLIC_WC_PROJECT_ID=

# Frontend port configuration (must match ANVIL_PORT for localhost chain)
NEXT_PUBLIC_ANVIL_PORT=3002

# Sepolia Testnet Configuration (for deployment)
# Get RPC URL from: https://infura.io or https://alchemy.com
SEPOLIA_RPC_URL=
# Get from: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=

# Optional: Multi-chain deployment
BASESCAN_API_KEY=
ARBISCAN_API_KEY=
